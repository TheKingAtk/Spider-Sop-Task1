<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".gameComp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/container1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/p1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textSize="30sp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                tools:context=".gameLayout">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:contentDescription="@string/rock"
                    android:onClick="onGame1"
                    android:id="@+id/rock1"
                    android:src="@drawable/rock"/>
                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="150dp"
                    android:onClick="onGame1"
                    android:contentDescription="@string/paper"
                    android:id="@+id/paper1"
                    android:src="@drawable/paper"/>
                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="5dp"
                    android:onClick="onGame1"
                    android:contentDescription="@string/scissor"
                    android:id="@+id/scissor1"
                    android:src="@drawable/scissor"/>
            </LinearLayout>
        </FrameLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/container2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/p2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textSize="30sp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                tools:context=".gameLayout">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:contentDescription="@string/rock"
                    android:id="@+id/rock2"
                    android:src="@drawable/rock"/>
                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="150dp"
                    android:contentDescription="@string/paper"
                    android:id="@+id/paper2"
                    android:src="@drawable/paper"/>
                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="5dp"
                    android:id="@+id/scissor2"
                    android:contentDescription="@string/scissor"
                    android:src="@drawable/scissor"/>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center|top"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:id="@+id/roundScreen"/>
</FrameLayout>